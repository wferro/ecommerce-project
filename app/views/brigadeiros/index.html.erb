
	<div id="all">
    <%= render "commons/commonHeader" %>
    <section class="top-section">
      <div class="offset-borders">
            <div class="full-header-container" id="header-services">
                <div class="full-header">
                    <div class="container">
                        <h1>All Brigadeiros</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>


			<%= form_tag('/', method: "get") do %>
			  <%= label_tag(:q, "Search for:") %>
			  <%= text_field_tag(:key_word) %>
			  <%= submit_tag("Search") %>
			<% end %>


        <section id="products-section">
            <div class="section-content">
                <div class="container">
                    <header class="section-header">
                        <h1>Tasty choices</h1>
                        <p>Check some of our best products and feel the great passion for taste</p>
                    </header>

										<% if @brigadeiros.empty? %>
										<p> No flavor was found. Try to search again please!!!
										<% else %>
										<div class="grid-container">
											<% @brigadeiros.each do |prod| %>
											<div class="grid-item">
												<h3><%= prod.name %></h3>
												<h3> 111</h3>
												<%= image_tag prod.image , style:'height:20vw;width:15vw;margin-bottom:10px;' %>
												<%= link_to 'Show', brigadeiro_path(prod) %>
											</div>
											<% end %>
										</div>
										<% end %>
                </div><!-- .container -->
            </div><!-- .section-content -->
        </section>
    </div>
